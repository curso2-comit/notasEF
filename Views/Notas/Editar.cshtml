@model Nota
<form method="POST" asp-action="DoEdit" style="max-width: 18rem;">
    <input type="hidden" name="ID" value="@Model.ID">
    <input type="text" name="titulo" value="@Model.Titulo">
    <textarea name="cuerpo" cols="35" rows="3">@Model.Cuerpo</textarea>
    <input type="submit" class="btn btn-dark" value="Guardar Nota">
</form>